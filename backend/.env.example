# Database
DATABASE_URL=postgresql://user:password@host:5432/viralit_yt

# Application URLs
APP_BASE_URL=https://your-railway-backend.railway.app
FRONTEND_BASE_URL=https://your-app.vercel.app

# OAuth
OAUTH_REDIRECT_URI=https://your-railway-backend.railway.app/auth/youtube/callback

# Encryption (generate with: python -c "import nacl.utils; print(nacl.utils.random(nacl.secret.SecretBox.KEY_SIZE).hex())")
ENCRYPTION_KEY=your-64-char-hex-key-here

# Video Processing
YTDLP_BIN=yt-dlp
FFMPEG_BIN=ffmpeg
TEMP_DIR=/tmp

# Worker Settings
WORKER_POLL_INTERVAL=60
WORKER_BATCH_SIZE=5

# Upload Settings
UPLOAD_VISIBILITY=unlisted
MAX_RETRIES=3

